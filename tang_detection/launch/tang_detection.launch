<launch>
  <arg name="port" default = "/dev/ttyUSB0" />
  
  <node pkg="nodelet" type="nodelet" output="screen" name="wit_nodelet_manager" args="manager"/>
  <node pkg="nodelet" type="nodelet" output="screen" name="wit" args="load wit_node/WitNodelet wit_nodelet_manager" >
    <param name="port" value="$(arg port)" />
  </node>

  <node name="tang_detection" pkg="tang_detection" type="human_follow.py" output="screen">
    <param name = "threshold" type = "double" value = "6.0"/>  <!-- これより遠い距離の画素を無視する -->
    <param name = "debug" type="bool" value="1"/>
  </node>

</launch>
