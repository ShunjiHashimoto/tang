<launch>

  <node name="joy_node" pkg="joy" type="joy_node" >
    <param name="autorepeat_rate" value="5" />
    <param name="deadzone" value="0.12" />
  </node>

  <node name="tang_detection" pkg="tang_detection" type="human_detection.py" output="screen">
    <param name = "threshold" type = "double" value = "3"/>  <!-- これより遠い距離の画素を無視する -->
    <param name = "debug" type="bool" value="0"/>
  </node>

  <node name="tang_teleop" pkg="tang_teleop" type="tang.py" output="screen">
    <param name = "max_area" type = "int" value = "130000"/> 
    <param name = "max_area_red" type = "int" value = "70"/> 
    <param name = "speed" type = "int" value = "30"/>
  </node>

</launch>
